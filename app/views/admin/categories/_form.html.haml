-if @category.errors.present?
  :javascript
    noty({text: '#{@category.errors.full_messages.join(', ')}', layout: 'bottomLeft', type: 'error'  });
= simple_form_for @category, :url => url, :html=> {:class => 'form-horizontal'} do |f|
  .form-group
    =f.label :name, :class => "col-sm-2 control-label"
    .col-sm-7
      = f.input_field :name, :label => false, :class => "form-control"
      .form-group
        %br
        .col-sm-offset-0.col-sm-10   
          = f.button :submit, :class => "btn btn-success"
