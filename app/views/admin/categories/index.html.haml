- content_for :breadcrumb do
  %li.activ= t('admin.categories.index')

= link_to 'Add categoty', new_admin_category_path

%ul
  - @categories.each do |category|
    %li= category.name
    = link_to raw('<i class="fa fa-trash-o"></i>'), admin_category_path(category), :method => :delete, data: { confirm: "Are you sure?" }
    = link_to raw('<i class="fa fa-pencil-square-o"></i>'), edit_admin_category_path(category)